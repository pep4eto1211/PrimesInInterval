<Window x:Class="PrimesInInterval.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prime numbers in an interval" Height="350" Width="326" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="174,15,0,0" Name="beginBox" VerticalAlignment="Top" Width="62" TabIndex="0" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlock1" Text="Interval beginning:" VerticalAlignment="Top" FontSize="18" />
        <Button Content="Go" Height="49" HorizontalAlignment="Left" Margin="242,15,0,0" Name="goButton" VerticalAlignment="Top" Width="49" FontSize="18" Click="goButton_Click" TabIndex="2" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="174,44,0,0" Name="endBox" VerticalAlignment="Top" Width="62" TabIndex="1" />
        <TextBlock FontSize="18" Height="23" HorizontalAlignment="Left" Margin="62,41,0,0" Name="textBlock2" Text="Interval end:" VerticalAlignment="Top" FlowDirection="LeftToRight" />
        <ListBox HorizontalAlignment="Left" Margin="12,108,0,12" Name="primeNumbersListBox" Width="279" FontSize="18" />
        <TextBlock FlowDirection="LeftToRight" FontSize="18" Height="23" HorizontalAlignment="Left" Margin="12,79,0,0" Name="textBlock3" Text="Prime numbers:" VerticalAlignment="Top" />
    </Grid>
</Window>
